<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vinoteka.gui.controller.AdminViewController">

    <children>
        <Button fx:id="logoutButton" layoutX="29.0" layoutY="33.0" mnemonicParsing="false" onAction="#onLogoutButtonClicked" text="logout" />
        <Button fx:id="mainMenuButton" layoutX="34.0" layoutY="70.0" mnemonicParsing="false" onAction="#onMainMenuButtonClicked" text="main menu" />
        <Button fx:id="checkPurchasesButton" layoutX="264.0" layoutY="189.0" mnemonicParsing="false" onAction="#onLookPurchasesButtonClicked" text="List of purchases" />
        <Button fx:id="editPurchaseButton" layoutX="246.0" layoutY="350.0" mnemonicParsing="false" onAction="#onEditPurchaseButtonClicked" text="edit purchase" />
        <Button fx:id="getNewWineButton" layoutX="264.0" layoutY="229.0" mnemonicParsing="false" onAction="#onGetNewWineButtonClicked" text="Get wine" />

        <ListView fx:id="allPurchasesList" layoutX="157.0" layoutY="58.0" prefHeight="284.0" prefWidth="290.0" />
        <TextField fx:id="supplierField" layoutX="343.0" layoutY="136.0" promptText="supplier" />
        <ListView fx:id="detailOfPurchaseList" layoutX="110.0" layoutY="114.0" prefHeight="200.0" prefWidth="200.0" />
        <Button fx:id="saveChangesPurchaseButton" layoutX="290.0" layoutY="330.0" mnemonicParsing="false" onAction="#onSaveChangesPurchaseButtonClicked" text="save changes" />
        <Label fx:id="savedChangesLabel" layoutX="229.0" layoutY="181.0" text="Your changes were saved" />

        <Button fx:id="makeDonePurchaseButton" layoutX="233.0" layoutY="350.0" mnemonicParsing="false" onAction="#onMakeDonePurchaseButtonClicked" text="change status DONE" />
        <Label fx:id="purchaseMadeDoneLabel" layoutX="229.0" layoutY="181.0" text="Purchase DONE" />
    </children>

</AnchorPane>
